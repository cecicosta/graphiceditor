<UserControl x:Class="ArteDraw.cor_de_fundo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArteDraw"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="20">
    <Grid>
        <StackPanel>
            <Button x:Name="btn_black" Content="" Width="20" Height="20" BorderBrush="{x:Null}" Background="Black" Click="btn_black_Click"/>
            <Button x:Name="btn_red" Content="" Width="20" BorderBrush="{x:Null}" Background="#FFFF0219" Click="btn_red_Click"/>
            <Button x:Name="btn_verde" Content="" Width="20" BorderBrush="{x:Null}" Background="#FF098F0F" Click="btn_verde_Click"/>
            <Button x:Name="btn_img" Content="" Width="20" BorderBrush="{x:Null}" Click="btn_img_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/ArteDraw;component/icones/image1.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
