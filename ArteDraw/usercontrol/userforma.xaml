<UserControl x:Class="ArteDraw.userforma"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArteDraw"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" Width="300" Height="25"> 
        <Button x:Name="btn_seta" Content="" Width="25" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/ArteDraw;component/icones/quadrado.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_quad" Width="25" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/ArteDraw;component/icones/quadrado.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_quad1" Width="25" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/ArteDraw;component/icones/quadrado.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>

</UserControl>
